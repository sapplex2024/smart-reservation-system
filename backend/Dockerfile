# 使用官方Python运行时作为基础镜像
FROM python:3.11-slim

# 添加系统依赖（支持pandas等包的安装）
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libc-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 设置环境变量
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# 复制极端简化的requirements-ultra-minimal.txt文件
COPY requirements-ultra-minimal.txt .

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements-ultra-minimal.txt

# 复制应用代码
COPY . .

# 创建必要的目录
RUN mkdir -p logs static

# 设置权限
RUN chmod +x scripts/init_db.py

# 暴露端口
EXPOSE 8000

# 健康检查
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# 启动命令
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]